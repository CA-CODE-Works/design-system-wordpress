{
  "name": "design-system-wordpress-gutenberg",
  "version": "1.2.1",
  "description": "Integrates the State of California Design System into WordPress.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cagov/design-system-wordpress-gutenberg.git"
  },
  "keywords": [
    "California Design System"
  ],
  "author": "Office of Digital Innovation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cagov/design-system-wordpress-gutenberg/issues"
  },
  "homepage": "https://github.com/cagov/design-system-wordpress-gutenberg#README",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "gulp build",
    "create-block": "gulp create-block --force --block ",
    "update-block": "gulp update-block --block %npm_config_block% --force %npm_config_force%",
    "postupdate-block": "cd blocks/%npm_config_block% && npm run build"
  },
  "devDependencies": {
    "@cagov/ds-link-icon": "^2.0.0",
    "@cagov/ds-site-footer": "^2.0.0",
    "@cagov/ds-site-header": "^2.0.0",
