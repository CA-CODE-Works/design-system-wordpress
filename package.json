    "@cagov/ds-skip-to-content": "^2.0.0",
    "@cagov/ds-statewide-footer": "^2.0.0",
    "@cagov/ds-statewide-header": "^2.0.0",
    "css-loader": "^6.7.4",
    "postcss-loader": "^7.3.0",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.84.0"
  },
  "dependencies": {
    "@cagov/ds-base-css": "^1.0.19"
  }
}
